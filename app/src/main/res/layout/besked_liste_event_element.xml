<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/box_profil_event_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/box_own_events"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/beskedbackground4" />


    <androidx.cardview.widget.CardView
        android:id="@+id/own_event_picture_holder"
        android:layout_gravity="center"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:cardCornerRadius="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="26dp">

        <ImageView
            android:id="@+id/own_event_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/_profiltest" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/beskeder_event_overskrift"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_toEndOf="@+id/own_event_picture_holder"
        android:layout_toRightOf="@+id/own_event_picture_holder"
        android:text="Overskrift"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/own_event_amount_anmodning"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/beskeder_event_overskrift"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/own_event_picture_holder"
        android:layout_toRightOf="@+id/own_event_picture_holder"
        android:gravity="left"
        android:text="Antal anmodninger"
        android:textColor="#51555B"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/own_events_dato"
        android:layout_width="45dp"
        android:layout_height="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"


        android:text="Dato"
        android:textColor="#4C5270"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/own_event_anmodning1_holder"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_toRightOf="@+id/own_event_picture_holder"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="70dp"
        app:cardCornerRadius="100dp">

        <ImageView
            android:id="@+id/beskeder_event_lilleprofilbillede1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/_profiltest" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/own_event_anmodning2_holder"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_toRightOf="@+id/own_event_picture_holder"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="70dp"
        app:cardCornerRadius="100dp">

        <ImageView
            android:id="@+id/beskeder_event_lilleprofilbillede2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/_profiltest" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>