<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Profile">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#23295f"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView_pb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/left_but"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/question" />

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/gradient"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/text_information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="4dp"
                    android:text="SÃ¸ndags-is med Pia, 22"
                    android:textColor="#A4E8E0"
                    android:textSize="28dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/view" />

                <TextView
                    android:id="@+id/text_curPic"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="14dp"
                    android:background="@drawable/selection"
                    android:gravity="center"
                    android:text="1/4"
                    android:textColor="#A4E8E0"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/view" />

                <View
                    android:id="@+id/left_but"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/right_but"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

                <View
                    android:id="@+id/right_but"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/left_but"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <View
                    android:id="@+id/btn_back_profile"
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/topbar3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginRight="3dp"
                    app:layout_constraintBottom_toBottomOf="@+id/btn_back_profile"
                    app:layout_constraintEnd_toEndOf="@+id/btn_back_profile"
                    app:layout_constraintStart_toStartOf="@+id/btn_back_profile"
                    app:layout_constraintTop_toTopOf="@+id/btn_back_profile"
                    app:srcCompat="@drawable/arrowleftblue" />

                <ImageView
                    android:id="@+id/settings_btn_pro"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/settings" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView_pb"
                    app:layout_constraintTop_toBottomOf="@+id/text_information"
                    tools:layout_editor_absoluteX="-15dp">

                    <View
                        android:id="@+id/view28"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                    <View
                        android:id="@+id/selection1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/picselection"
                        android:visibility="invisible" />

                    <View
                        android:id="@+id/view23"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                    <View
                        android:id="@+id/selection2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/picselection"
                        android:visibility="invisible" />

                    <View
                        android:id="@+id/view24"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                    <View
                        android:id="@+id/selection3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/picselection"
                        android:visibility="invisible" />

                    <View
                        android:id="@+id/view25"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                    <View
                        android:id="@+id/selection4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/picselection"
                        android:visibility="invisible" />

                    <View
                        android:id="@+id/view26"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                    <View
                        android:id="@+id/selection5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/picselection"
                        android:visibility="invisible" />

                    <View
                        android:id="@+id/view27"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                    <View
                        android:id="@+id/selection6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/picselection"
                        android:visibility="invisible" />

                    <View
                        android:id="@+id/view29"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/location" />

                        <TextView
                            android:id="@+id/text_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5sp"
                            android:layout_marginLeft="5sp"
                            android:text="placering"
                            android:textColor="#B5DEF6"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/job" />

                        <TextView
                            android:id="@+id/text_job"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5sp"
                            android:layout_marginLeft="5sp"
                            android:text="Job"
                            android:textColor="#B5DEF6"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/education" />

                        <TextView
                            android:id="@+id/text_edu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5sp"
                            android:layout_marginLeft="5sp"
                            android:text="Uddanelse"
                            android:textColor="#B5DEF6"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constrain_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="64dp"
                        android:layout_height="65dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginRight="30dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/edit2" />

                    <View
                        android:id="@+id/on_edit"
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="29dp"
                        android:layout_marginRight="29dp"
                        android:background="@drawable/circle2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/text_about_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="10dp"
                android:text="Om Pia"
                android:textColor="#A4E8E0"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/text_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="Typen der altid lÃ¸ber efter bussen, og altid ender med at komme i alt for god tid"
                android:textColor="#B5DEF6"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/text_mutual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="20sp"
                android:text="FÃ¦lles venners"
                android:textColor="#A4E8E0"
                android:textSize="16sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|start"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/ellipse_7"
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/ellipse4" />

                    <View
                        android:id="@+id/ellipse_6"
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/ellipse5" />

                    <View
                        android:id="@+id/ellipse_5"
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/ellipse" />

                    <View
                        android:id="@+id/ellipse_4"
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/ellipse2" />

                    <View
                        android:id="@+id/ellipse_8"
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/ellipse3" />

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/text_instagram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="20sp"
                android:text="Instagram(492)"
                android:textColor="#A4E8E0"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TableLayout
                android:id="@+id/tableLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="20dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/rectangle_1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center|start|right"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="0dp"
                        android:layout_weight="1"
                        android:background="#DC923C" />

                    <View
                        android:id="@+id/rectangle_5"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center|start|right"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="0dp"
                        android:layout_weight="1"
                        android:background="#2055A5" />

                    <View
                        android:id="@+id/rectangle_6"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center|start|right"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="0dp"
                        android:layout_weight="1"
                        android:background="#DEE137" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp">

                    <View
                        android:id="@+id/rectangle_2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center|start|right"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="0dp"
                        android:layout_weight="1"
                        android:background="#2C7D3E" />

                    <View
                        android:id="@+id/rectangle_3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center|start|right"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="0dp"
                        android:layout_weight="1"
                        android:background="#B813BB" />

                    <View
                        android:id="@+id/rectangle_4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center|start|right"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="0dp"
                        android:layout_weight="1"
                        android:background="#BD2727" />

                </TableRow>

            </TableLayout>

            <LinearLayout
                android:id="@+id/confirmationBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/btn_reject"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:maxWidth="50dp"
                    android:maxHeight="50dp"
                    app:srcCompat="@drawable/reject" />

                <TextView
                    android:id="@+id/text_confirmation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="TextView"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/btn_accept"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:maxWidth="50dp"
                    android:maxHeight="50dp"
                    app:srcCompat="@drawable/acceptperson" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>