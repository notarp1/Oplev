<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createEvent1_frag">

    <ImageView
        android:id="@+id/create_pic"
        android:layout_width="315dp"
        android:layout_height="155dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/sym_def_app_icon"/>

    <EditText
        android:id="@+id/create_title_input"
        android:layout_width="353dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Overskrift"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_pic" />

    <EditText
        android:id="@+id/create_desc_input"
        android:layout_width="364dp"
        android:layout_height="98dp"
        android:layout_marginTop="37dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Beskrivelse"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_title_input" />

    <EditText
        android:id="@+id/create_price_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/create_price_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/create_price_txt"
        app:layout_constraintTop_toTopOf="@+id/create_price_txt" />

    <EditText
        android:id="@+id/create_date_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintBottom_toBottomOf="@+id/create_date_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/create_date_txt"
        app:layout_constraintTop_toTopOf="@+id/create_date_txt" />

    <EditText
        android:id="@+id/create__city_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/create_city_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/create_city_txt"
        app:layout_constraintTop_toTopOf="@+id/create_city_txt" />

    <TextView
        android:id="@+id/create_price_txt"
        android:layout_width="138dp"
        android:layout_height="37dp"
        android:layout_marginTop="24dp"
        android:gravity="left|center_vertical"
        android:text="Pris:"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/create_price_input"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_desc_input" />

    <TextView
        android:id="@+id/create_date_txt"
        android:layout_width="138dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:gravity="left|center_vertical"
        android:text="Dato:"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/create_date_input"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_price_txt" />

    <TextView
        android:id="@+id/create_city_txt"
        android:layout_width="138dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:gravity="left|center_vertical"
        android:text="By:"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/create__city_input"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_date_txt" />

    <Button
        android:id="@+id/create_next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Videre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_city_txt" />

</androidx.constraintlayout.widget.ConstraintLayout>