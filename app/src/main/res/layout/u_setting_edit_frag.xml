<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/tableLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/rectangle_1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center|left"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="0dp"
                        android:background="#DC923C" />

                    <View
                        android:id="@+id/rectangle_5"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center|left"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="0dp"
                        android:background="#2055A5" />

                    <View
                        android:id="@+id/rectangle_6"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center|left"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="0dp"
                        android:background="#DEE137" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp">

                    <View
                        android:id="@+id/rectangle_2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center|left"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="0dp"
                        android:background="#2C7D3E" />

                    <View
                        android:id="@+id/rectangle_3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center|left"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="0dp"
                        android:background="#B813BB" />

                    <View
                        android:id="@+id/rectangle_4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center|left"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="0dp"
                        android:background="#BD2727" />

                </TableRow>

            </TableLayout>

            <TextView
                android:id="@+id/text_om"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="10dp"
                android:text="Om Mads" />

            <View
                android:id="@+id/om_box"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"

                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#BD2727" />

            <TextView
                android:id="@+id/by_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="By" />

            <View
                android:id="@+id/by_box"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"

                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#BD2727" />

            <TextView
                android:id="@+id/job_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="Job" />

            <View
                android:id="@+id/job_box"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"

                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#BD2727" />

            <TextView
                android:id="@+id/uddannelse_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="Uddanelse" />

            <View
                android:id="@+id/uddanelse_box"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"

                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#BD2727" />

            <TextView
                android:id="@+id/Instagram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="Instagram" />

            <Button
                android:id="@+id/insta_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="40dp"
                android:text="Connect" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>

