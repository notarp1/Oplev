<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/chat_background_pic"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/chat_besked_element_tekst"
        android:layout_alignTop="@+id/chat_besked_element_tekst"
        android:layout_alignRight="@+id/chat_besked_element_tekst"
        android:layout_alignLeft="@+id/chat_besked_element_tekst"
        android:background="@drawable/beskedbackground" />

    <TextView
        android:id="@+id/chat_besked_element_tekst"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="18sp"
        android:paddingLeft="5dp"/>
</RelativeLayout>