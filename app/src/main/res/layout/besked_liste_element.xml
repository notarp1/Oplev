<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/beskedListElement"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">
    xmlns:card_view="http://schemas.android.com/apk/res-auto"


    <ImageView
        android:id="@+id/box_profil"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/beskedbackground" />

    <androidx.cardview.widget.CardView
        android:id="@+id/beskeder_profilbillede1"
        android:layout_gravity="center"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:cardCornerRadius="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="26dp">

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/_profiltest" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/beskeder_overskrift"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_toStartOf="@+id/beskeder_dato"
        android:layout_toLeftOf="@+id/beskeder_dato"
        android:layout_toEndOf="@+id/beskeder_profilbillede1"
        android:layout_toRightOf="@id/beskeder_dato"
        android:text="Overskrift"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/beskeder_name"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/beskeder_overskrift"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/beskeder_profilbillede1"

        android:layout_toRightOf="@+id/beskeder_profilbillede1"
        android:gravity="left"
        android:text="Antal anmodninger"
        android:textColor="#51555B"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/beskeder_dato"
        android:layout_width="45dp"
        android:layout_height="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"


        android:text="Dato"
        android:textColor="#4C5270"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/besked_liste_lastmessage"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/beskeder_overskrift"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@+id/beskeder_profilbillede1"
        android:layout_toRightOf="@+id/beskeder_profilbillede1"
        android:text="TextView"
        android:textColor="#51555B" />

</RelativeLayout>