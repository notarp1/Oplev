<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edit_Event">

    <Button
        android:id="@+id/edit_event_next_btn"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:background="#4C5270"
        android:shadowColor="#FFFFFF"
        android:text="VIDERE"
        android:textColor="#A4E8E0"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/edit_event_next_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".CreateEvent.createEvent1_frag">

            <ImageView
                android:id="@+id/edit_event_pic"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toTopOf="@+id/edit_event_title_input"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/default2" />

            <TextView
                android:id="@+id/edit_event_changepic_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#81FFFFFF"
                android:text="Skift billede"
                android:textColor="#000000"
                app:layout_constraintBottom_toBottomOf="@+id/edit_event_pic"
                app:layout_constraintEnd_toEndOf="@+id/edit_event_pic"
                app:layout_constraintStart_toStartOf="@+id/edit_event_pic"
                app:layout_constraintTop_toTopOf="@+id/edit_event_pic" />

            <EditText
                android:inputType="textCapSentences"
                android:id="@+id/edit_event_title_input"
                android:layout_width="352dp"
                android:layout_height="59dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:ems="10"
                android:maxLength="19"
                android:gravity="center"
                android:hint="Overskrift"
                android:textColor="#A4E8E0"
                android:textColorHint="#A4E8E0"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/edit_event_desc_input"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_event_pic" />

            <EditText
                android:id="@+id/edit_event_desc_input"
                android:layout_width="356dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:ems="10"
                android:gravity="bottom|center_horizontal"
                android:hint="Beskrivelse"
                android:inputType="textCapSentences|textMultiLine"
                android:textColor="#A4E8E0"
                android:textColorHint="#A4E8E0"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/edit_event_price_input"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_event_title_input" />

            <EditText
                android:id="@+id/edit_event_price_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="5dp"
                android:ems="8"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:textColor="#A4E8E0"
                android:textColorHint="#A4E8E0"
                app:layout_constraintBottom_toTopOf="@+id/edit_event_date_input"
                app:layout_constraintEnd_toStartOf="@+id/edit_event_price_txt2"
                app:layout_constraintTop_toBottomOf="@+id/edit_event_desc_input" />

            <TextView
                android:id="@+id/edit_event_date_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:background="?attr/editTextBackground"
                android:ems="10"
                android:gravity="center"
                android:text="DD/MM/YYYY"
                android:textColor="#A4E8E0"
                android:textColorHint="#A4E8E0"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/edit_event_time_input"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_event_price_input" />

            <TextView
                android:id="@+id/edit_event_time_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:background="?attr/editTextBackground"
                android:ems="10"
                android:gravity="center"
                android:text="HH:MM"
                android:textColor="#A4E8E0"
                android:textColorHint="#A4E8E0"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/edit_event_city_input"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_event_date_input" />

            <TextView
                android:id="@+id/edit_event_price_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="left|center_vertical"
                android:text="Pris:"
                android:textColor="#A4E8E0"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/edit_event_price_input"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/edit_event_price_input" />

            <TextView
                android:id="@+id/edit_event_price_txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:gravity="left|center_vertical"
                android:text="DKK"
                android:textColor="#A4E8E0"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/edit_event_price_input"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/edit_event_price_input"
                app:layout_constraintVertical_bias="0.476" />

            <TextView
                android:id="@+id/edit_event_date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="left|center_vertical"
                android:text="Dato:"
                android:textColor="#A4E8E0"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/edit_event_date_input"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/edit_event_date_input" />

            <TextView
                android:id="@+id/edit_event_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="left|center_vertical"
                android:text="Tidspunkt:"
                android:textColor="#A4E8E0"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/edit_event_time_input"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/edit_event_time_input" />

            <EditText
                android:id="@+id/edit_event_city_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="#A4E8E0"
                app:layout_constraintBottom_toTopOf="@+id/edit_event_dropDown"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_event_time_input" />

            <TextView
                android:id="@+id/edit_event_city_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="left|center_vertical"
                android:text="By:"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/edit_event_city_input"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/edit_event_city_input" />

            <TextView
                android:id="@+id/edit_event_type_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="left|center_vertical"
                android:text="By:"
                android:textColor="#A4E8E0"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/edit_event_city_input"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/edit_event_city_input" />

            <TextView
                android:id="@+id/edit_event_type2_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:text="Type:"
                android:textColor="#A4E8E0"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/edit_event_dropDown"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/edit_event_dropDown" />

            <Spinner
                android:id="@+id/edit_event_dropDown"
                android:layout_width="208dp"
                android:layout_height="23dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/mybg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_event_city_input" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>